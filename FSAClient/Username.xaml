<Page x:Class="FSAClient.Username"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSAClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Username">

    <Grid Background="#FFFFFBF7">
        <Label Content="Unter welchem Namen wollen Sie auffindbar sein?" HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Center" Height="1" Margin="0,249,0,0" Stroke="Black" VerticalAlignment="Top" Width="414"/>
        <TextBox x:Name="TextBoxUsername" Margin="0,222,0,0" TextWrapping="Wrap" Text="Unnamed Client" VerticalAlignment="Top" Width="414" Height="34" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Center" TextAlignment="Center" FontSize="16" SelectionBrush="#FFD09CE3"/>
        <Button x:Name="ButtonRegisterClient" Content="Fortfahren" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Width="414" Height="38" Background="White" FontSize="16" Click="ButtonRegisterClient_Click"/>

    </Grid>
</Page>
